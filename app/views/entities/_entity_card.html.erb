<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <div class="panel clearfix yk-entity-card <%= 'yk-entity-card-with-type' if defined? show_type %>" entity-type="<%= entity.entity_type.id %>">
    <%= thumb_img_tag entity.id %>
    <%= link_to entity.title, send(entity.entity_type.view_path, entity.id) %>
    <br />
    <span class="label label-success"><%= entity.entity_sub_type.name %></span>
    <% if entity.collection.present? %>
        <span class="label label-danger"><%= entity.collection.name %></span>
    <% end %>
    <% if defined? show_type %>
        <div class="yk-entity-card-type"><%= entity.entity_type.name %></div>
    <% end %>
  </div>
</div>