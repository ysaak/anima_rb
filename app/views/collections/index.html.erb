<div class="row">
  <h1 class="col-xs-12 col-sm-6">Collections</h1>
  <div class="col-xs-12 col-sm-6 yk-header-menubar">
    <%= link_to raw('<span class="btn-label"><i class="fa fa-plus"></i></span>Nouvelle collection'), new_collection_path, class: 'btn btn-info btn-labeled' %>
  </div>
</div>

<div class="panel panel-default">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @collections.each do |collection| %>
          <tr>
            <td><%= collection.name %></td>
            <td><%= link_to 'Show', collection %></td>
            <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
            <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>