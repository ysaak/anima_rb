<div class="panel panel-default">
    <div class="panel-body">
    <%= form_for(@tag, html: { class: 'form-horizontal' }) do |f| %>
        <% if @tag.errors.any? %>
        <div id="alert alert-danger" role="alert">
            <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

            <ul>
                <% @tag.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <div class="form-group">
            <%= f.label :name, class: 'col-sm-2 control-label required' %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :description, class: 'col-sm-2 control-label required' %>
            <div class="col-sm-10">
                <%= f.text_area :description, class: 'form-control', rows: 5 %>
            </div>
        </div>

        <div class="text-right">
            <%= f.submit class: 'btn btn-primary' %>
        </div>
    <% end %>
    </div>
</div>